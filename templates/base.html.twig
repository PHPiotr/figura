{% set route_name = app.request.attributes.get('_route') %}

<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Studio Figura Zakopane{% endblock %}</title>
        {% block stylesheets %}
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
            <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700,800,900" rel="stylesheet">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link rel='shortcut icon' type='image/x-icon' href="{{ absolute_url('images/favicon.ico') }}" />
    </head>
    <body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
        {% block body %}
            <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light site-navbar-target" id="ftco-navbar">
                <div class="container">
                    <a class="navbar-brand" href="{{ path('home') }}" rel="nofollow" title="Studio Figura - Zakopane">
                        <img width="100" src="{{ asset('images/logo-studio-figura-zakopane.png') }}" alt="Studio Figura - logo" />
                    </a>
                    <button class="navbar-toggler js-fh5co-nav-toggle fh5co-nav-toggle" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="oi oi-menu"></span> Menu
                    </button>
                    <div class="collapse navbar-collapse" id="ftco-nav">
                        <ul class="navbar-nav nav ml-auto">
                            <li class="nav-item"><a href="{{ path('home') }}" class="nav-link {% if route_name == "home" %}active foo{% endif %}"><span>Strona główna</span></a></li>
                            <li class="nav-item"><a href="{{ path('fitness') }}" class="nav-link {% if "fitness" in route_name %}active foo{% endif %}"><span>Fitness</span></a></li>
                            <li class="nav-item"><a href="{{ path('wellness') }}" class="nav-link {% if route_name == "wellness" %}active foo{% endif %}"><span>Wellness</span></a></li>
                            <li class="nav-item"><a href="{{ path('aesthetics') }}" class="nav-link {% if "aesthetics" in route_name %}active foo{% endif %}"><span>Zabiegi estetyczne</span></a></li>
                            <li class="nav-item"><a href="{{ path('about') }}" class="nav-link {% if route_name == "about" %}active foo{% endif %}"><span>O nas</span></a></li>
                            <li class="nav-item"><a href="{{ path('contact') }}" class="nav-link {% if route_name == "contact" %}active foo{% endif %}"><span>Kontakt</span></a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div id="content">
                {% block content %}{% endblock %}
            </div>

            <footer class="ftco-footer ftco-section">
                <div class="container">
                    <div class="row mb-5">
                        <div class="col-md">
                            <div class="ftco-footer-widget mb-4">
                                <h2 class="ftco-heading-2">Studio <span><a href="index.html">Figura</a></span></h2>
                                <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                                    <li class="ftco-animate"><a target="_blank" href="{{ facebookUrl }}"><span><i class="align-middle fab fa-facebook"></i></span></a></li>
{#                                    <li class="ftco-animate"><a href="#"><span><i class="align-middle fab fa-facebook-messenger"></i></span></a></li>#}
                                </ul>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="ftco-footer-widget mb-4 ml-md-4">
                                <h2 class="ftco-heading-2">Linki</h2>
                                <ul class="list-unstyled">
                                    <li><a href="{{ path('home') }}"><span class="icon-long-arrow-right mr-2"></span>Strona główna</a></li>
                                    <li><a href="{{ path('fitness') }}"><span class="icon-long-arrow-right mr-2"></span>Fitness</a></li>
                                    <li><a href="{{ path('wellness') }}"><span class="icon-long-arrow-right mr-2"></span>Wellness</a></li>
                                    <li><a href="{{ path('aesthetics') }}"><span class="icon-long-arrow-right mr-2"></span>Zabiegi estetyczne</a></li>
                                    <li><a href="{{ path('about') }}"><span class="icon-long-arrow-right mr-2"></span>O nas</a></li>
                                    <li><a href="{{ path('contact') }}"><span class="icon-long-arrow-right mr-2"></span>Kontakt</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="ftco-footer-widget mb-4">
                                <h2 class="ftco-heading-2">Masz pytanie?</h2>
                                <div class="block-23 mb-3">
                                    <ul>
                                        <li><span class="icon icon-map-marker"></span><span class="text">{{ companyAddress }}</span></li>
                                        <li><a href="tel://{{ contactPhone }}"><span class="icon icon-phone"></span><span class="text">{{ contactPhone }}</span></a></li>
                                        <li><a href="mailto:{{ contactEmail }}"><span class="icon icon-envelope"></span><span class="text">{{ contactEmail }}</span></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                        </div>
                    </div>
                </div>
            </footer>

            <div id="ftco-loader" class="show fullscreen">
                <svg class="circular" width="48px" height="48px">
                    <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/>
                    <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/>
                </svg>
            </div>
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
